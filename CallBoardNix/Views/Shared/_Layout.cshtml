<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CallBoardNix</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CallBoardNix.styles.css" asp-append-version="true" />
</head>
<body>
     <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-0">
            <div class="container">
                <a class="navbar-brand w-25 text-center" asp-area="" asp-controller="Home" asp-action="Index">CallBoardNix</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                 <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        @{
                            if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item bg-white">       
                                    <a class="btn btn-outline-dark btn-sm" style="border-radius: 0px;" asp-area="" asp-controller="Account" asp-action="Profile">Hello @User.Identity.Name!</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item bg-white">
                                    <a class="btn btn-outline-dark btn-sm" style="border-radius: 0px;" asp-area="" asp-controller="Account" asp-action="Register">Sign up</a>
                                    <a class="btn btn-outline-dark btn-sm" style="border-radius: 0px;"  asp-area="" asp-controller="Account" asp-action="Login">Sign in</a>
                                </li>
                            }
                        }
                    </ul>
                </div> 
            </div>
        </nav>
    </header>
    <div class="container">
    <div class="d-flex">
        <div class="p-2 w-25 border-start border-end">
            <div class="bg-white">
                <nav class="nav flex-column mt-0 bg-white w-100">
                    <a class="nav-item btn btn-outline-dark" style="border-radius: 0px;" asp-area="" asp-controller="Home" asp-action="Index">Main</a>
                    <a class="nav-item btn btn-outline-dark" style="margin-top: 4px; border-radius: 0px;" asp-area="" asp-controller="Company" asp-action="Company">Company</a>

                </nav>
            </div>
        </div>
        <main class="p-2 w-75 border-end">
            @RenderBody()
        </main>
    </div>
    </div>

    <footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - CallBoardNix - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
