@model CallBoardNix.Models.AdvertView
@{
}
<div class="p-5" style="height:820px">
<h5 class="text-center mt-4">
    Editing advert...
</h5>
<form asp-controller="Company" asp-action="EditAdvert" asp-route-IdAdvert="@Model.IdAdvert" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mt-4">
            <label asp-for="NameAdvert" class="control-label"></label>
            <input asp-for="NameAdvert" required class="form-control" />
            <span asp-validation-for="NameAdvert" class="text-danger"></span>
        </div>
            <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" required class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
            <div class="form-group">
            <label asp-for="Requirements" class="control-label"></label>
            <textarea asp-for="Requirements" required class="form-control"></textarea>
            <span asp-validation-for="Requirements" class="text-danger"></span>         
        </div>
            <div class="form-group">
            <label asp-for="Salary" class="control-label"></label>
            <input asp-for="Salary" required class="form-control" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
            
        <div class="form-group text-center mt-4">
            <input type="submit" value="Edit" class="btn btn-outline-dark btn-sm" style="border-radius: 0px;"/>
        </div><br>
    </form>
</div>