@using CallBoardNix.Models
@model CallBoardNix.Models.AdvertView
@{
    ViewData["Title"] = "Create Advert";  
}
<div class="ps-3 pe-3">
<h5 class="text-center mt-4">
    Job creation...
</h5>
<form asp-controller="Company" asp-action="CreateAdvert" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mt-4">
            <label asp-for="NameAdvert" class="control-label"></label>
            <input asp-for="NameAdvert" required class="form-control" />
            <span asp-validation-for="NameAdvert" class="text-danger"></span>
        </div>
            <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" required class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
            <div class="form-group">
            <label asp-for="Requirements" class="control-label"></label>
            <textarea asp-for="Requirements" required class="form-control"></textarea>
            <span asp-validation-for="Requirements" class="text-danger"></span>         
        </div>
            <div class="form-group">
            <label asp-for="Salary" class="control-label"></label>
            <input asp-for="Salary" required class="form-control" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <select class="form-select mt-4" required asp-for="IdCategory" asp-items="ViewBag.Categories"></select>
        <div class="form-group text-center mt-4">
            <input type="submit" value="Create" class="btn btn-outline-dark btn-sm" />
        </div><br>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}